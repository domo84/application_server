{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
	"parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
		"strict": 0,
        "indent": [
            "error",
            "tab",
			{ "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-console": "off"
    }
}
